# Database
DATABASE_URL=postgresql://postgres:postgres@app-db:5432/db

# Redis
REDIS_URL=redis://app-redis:6379

# Server
NODE_ENV=development
PORT=3000

# Session
SESSION_COOKIE_NAME=template_session
SESSION_TTL_SECONDS=86400
SESSION_SLIDING_EXTENSION_SECONDS=3600

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# CORS
CORS_ORIGIN=http://localhost:3000

# Domain (for production)
DOMAIN=localhost

# Cloudflare
BEHIND_CLOUDFLARE=false

# Default Role
DEFAULT_ROLE=GUEST

# Authentication Providers
# Enable/disable authentication methods (at least one must be enabled)
AUTH_EMAIL_PASSWORD_ENABLED=true
AUTH_GOOGLE_ENABLED=false
AUTH_SLACK_ENABLED=false
AUTH_GITHUB_ENABLED=false

# Google OAuth (required if AUTH_GOOGLE_ENABLED=true)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Slack OAuth (required if AUTH_SLACK_ENABLED=true)
# Get credentials from: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:3000/auth/slack/callback

# GitHub OAuth (required if AUTH_GITHUB_ENABLED=true)
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=db
